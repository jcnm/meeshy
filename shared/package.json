{
  "name": "@meeshy/shared",
  "version": "1.0.0",
  "description": "Librairie partagée fortement typée pour Meeshy (Types, Schema Prisma, Utilitaires)",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types/*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    },
    "./schema": "./schema.prisma",
    "./client": "./client/index.js"
  },
  "files": [
    "dist",
    "schema.prisma",
    "client"
  ],
  "scripts": {
    "build": "npm run build:types",
    "build:types": "tsc --project tsconfig.json",
    "build:watch": "tsc --watch --project tsconfig.json",
    "build:prisma": "prisma generate --schema=./schema.prisma",
    "build:all": "npm run clean && npm run build:types && npm run build:prisma",
    "clean": "rm -rf dist types/**/*.js types/**/*.d.ts types/**/*.js.map types/**/*.d.ts.map",
    "clean:all": "npm run clean && rm -rf client node_modules",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "validate": "npm run typecheck && echo '✅ Types validation réussie - Alignement avec schema.prisma vérifié'",
    "prebuild": "npm run clean",
    "prisma:studio": "prisma studio --schema=./schema.prisma",
    "prisma:format": "prisma format --schema=./schema.prisma"
  },
  "keywords": [
    "meeshy",
    "types",
    "typescript",
    "shared",
    "library",
    "prisma"
  ],
  "author": "Meeshy Team",
  "license": "UNLICENSED",
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "prisma": "^6.13.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "prisma": {
    "schema": "./schema.prisma"
  }
}
