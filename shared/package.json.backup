{
  "name": "@meeshy/shared",
  "version": "1.0.0",
  "description": "Shared types, schemas, and protocols for Meeshy microservices",
  "main": "generated/index.js",
  "types": "generated/index.d.ts",
  "exports": {
    ".": "./generated/index.js",
    "./prisma": "./generated/prisma/index.js",
    "./proto": "./proto/index.js"
  },
  "scripts": {
    "generate": "prisma generate",
    "migrate": "prisma migrate dev",
    "studio": "prisma studio", 
    "build:types": "tsc --build",
    "build": "pnpm run generate && pnpm run build:types && pnpm run distribute",
    "distribute": "chmod +x scripts/distribute.sh && ./scripts/distribute.sh",
    "clean": "rm -rf dist/ generated/ node_modules/ && find . -name '*.js' -not -path './node_modules/*' -not -path './prisma/client/*' -delete && find . -name '*.map' -not -path './node_modules/*' -not -path './prisma/client/*' -delete",
    "proto:compile": "protoc --js_out=import_style=commonjs,binary:./proto/generated --ts_out=./proto/generated proto/*.proto"
  },
  "dependencies": {
    "@prisma/client": "6.13.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "prisma": "6.13.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3"
  },
  "files": [
    "generated/",
    "proto/",
    "prisma/schema.prisma"
  ]
}
