# Configuration du service de traduction Meeshy

# Configuration générale
DEBUG=true
WORKERS=4

# Configuration des ports
FASTAPI_PORT=8000
GRPC_PORT=50051
ZMQ_PORT=5555

# Configuration base de données (Prisma)
DATABASE_URL=file:../shared/dev.db
PRISMA_POOL_SIZE=15

# Configuration Redis (cache)
REDIS_URL=redis://localhost:6379
TRANSLATION_CACHE_TTL=3600
CACHE_MAX_ENTRIES=10000

# Configuration ML
ML_BATCH_SIZE=32
GPU_MEMORY_FRACTION=0.8
MODELS_PATH=../../../public/models

# Configuration des langues
DEFAULT_LANGUAGE=fr
SUPPORTED_LANGUAGES=fr,en,es,de,pt,zh,ja,ar
AUTO_DETECT_LANGUAGE=true

# Configuration des modèles de traduction
BASIC_MODEL=mt5-small
MEDIUM_MODEL=nllb-200-distilled-600M
PREMIUM_MODEL=nllb-200-distilled-1.3B

# Configuration des performances
TRANSLATION_TIMEOUT=30
MAX_TEXT_LENGTH=1000
CONCURRENT_TRANSLATIONS=10
