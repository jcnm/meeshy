# Exemple de configuration personnalisée pour l'utilisateur principal
# Copiez ce fichier vers .env et ajustez selon vos besoins

# =============================================================================
# CONFIGURATION GÉNÉRALE
# =============================================================================
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug

# =============================================================================
# CONFIGURATION INITIALISATION BASE DE DONNÉES
# =============================================================================
# Forcer la réinitialisation complète de la base de données au démarrage
FORCE_DB_RESET=true

# =============================================================================
# CONFIGURATION UTILISATEURS PAR DÉFAUT
# =============================================================================

# =============================================================================
# CONFIGURATION UTILISATEUR MEESHY (BIGBOSS) - PARTIELLEMENT CONFIGURABLE
# =============================================================================
# Utilisateur fixe: username=meeshy, firstName=Meeshy, lastName=Sama, role=BIGBOSS
# Champs configurables:
MEESHY_PASSWORD=dev123                     # Mot de passe personnalisé
MEESHY_EMAIL=dev@meeshy.me                 # Email personnalisé
MEESHY_SYSTEM_LANGUAGE=fr                  # Langue système en français
MEESHY_REGIONAL_LANGUAGE=fr                # Langue régionale en français
MEESHY_CUSTOM_DESTINATION_LANGUAGE=en      # Langue de destination en anglais

# =============================================================================
# CONFIGURATION UTILISATEUR ADMIN - PARTIELLEMENT CONFIGURABLE
# =============================================================================
# Utilisateur fixe: username=admin, firstName=Admin, lastName=Manager, role=ADMIN
# Champs configurables:
ADMIN_PASSWORD=dev456                      # Mot de passe personnalisé
ADMIN_EMAIL=admin@meeshy.me                # Email personnalisé
ADMIN_SYSTEM_LANGUAGE=fr                   # Langue système en français
ADMIN_REGIONAL_LANGUAGE=fr                 # Langue régionale en français
ADMIN_CUSTOM_DESTINATION_LANGUAGE=en       # Langue de destination en anglais

# =============================================================================
# CONFIGURATION UTILISATEUR ATABETH - ENTIÈREMENT CONFIGURABLE
# =============================================================================
# Configuration complète du troisième utilisateur (entièrement configurable)
ATABETH_USERNAME=devuser                   # Nom d'utilisateur personnalisé
ATABETH_PASSWORD=dev789                    # Mot de passe personnalisé
ATABETH_FIRST_NAME=Dev                     # Prénom personnalisé
ATABETH_LAST_NAME=User                     # Nom de famille personnalisé
ATABETH_EMAIL=dev@meeshy.me                # Email personnalisé
ATABETH_ROLE=ADMIN                         # Rôle personnalisé (au lieu de USER)
ATABETH_SYSTEM_LANGUAGE=fr                 # Langue système en français
ATABETH_REGIONAL_LANGUAGE=fr               # Langue régionale en français
ATABETH_CUSTOM_DESTINATION_LANGUAGE=en     # Langue de destination en anglais

# =============================================================================
# CONFIGURATION DES PORTS
# =============================================================================
FASTIFY_PORT=3000
FASTIFY_HOST=0.0.0.0
GATEWAY_PORT=3000

# =============================================================================
# CONFIGURATION BASE DE DONNÉES
# =============================================================================
DATABASE_URL=file:../shared/dev.db

# =============================================================================
# CONFIGURATION REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# CONFIGURATION JWT ET SÉCURITÉ
# =============================================================================
JWT_SECRET=dev-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# =============================================================================
# CONFIGURATION WEBSOCKET
# =============================================================================
WS_MAX_CONNECTIONS=100000
WS_PING_INTERVAL=30000

# =============================================================================
# CONFIGURATION RATE LIMITING
# =============================================================================
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=60000

# =============================================================================
# CONFIGURATION CORS
# =============================================================================
CORS_ORIGINS=http://localhost:3100,http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3100,http://localhost:3000

# =============================================================================
# CONFIGURATION FRONTEND
# =============================================================================
FRONTEND_URL=http://localhost:3100

# =============================================================================
# CONFIGURATION TRANSLATOR (GRPC)
# =============================================================================
GRPC_TRANSLATION_HOST=translator
GRPC_TRANSLATION_PORT=50051
TRANSLATOR_GRPC_URL=translator:50051

# =============================================================================
# CONFIGURATION TRANSLATOR (ZMQ)
# =============================================================================
ZMQ_TRANSLATOR_HOST=translator
ZMQ_TRANSLATOR_PUSH_PORT=5555
ZMQ_TRANSLATOR_SUB_PORT=5558
ZMQ_TRANSLATOR_PORT=5555
ZMQ_TIMEOUT=30000

# =============================================================================
# CONFIGURATION PYTHON ET PNPM
# =============================================================================
PNPM_HOME=/pnpm
NPM_CONFIG_CACHE=/tmp/.npm
YARN_CACHE_FOLDER=/tmp/.yarn

# =============================================================================
# CONFIGURATION DES CHEMINS
# =============================================================================
LOG_DIR=logs
