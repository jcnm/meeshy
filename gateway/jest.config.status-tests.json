{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "rootDir": ".",
  "displayName": "Status System Tests",
  "testMatch": [
    "<rootDir>/src/__tests__/unit/**/*.test.ts",
    "<rootDir>/src/__tests__/integration/**/*.test.ts",
    "<rootDir>/src/__tests__/performance/**/*.test.ts",
    "<rootDir>/src/__tests__/resilience/**/*.test.ts"
  ],
  "collectCoverageFrom": [
    "src/services/maintenance.service.ts",
    "src/middleware/auth.ts",
    "src/socketio/MeeshySocketIOManager.ts",
    "src/socketio/MeeshySocketIOHandler.ts",
    "!src/**/*.d.ts",
    "!src/**/__tests__/**"
  ],
  "coverageDirectory": "coverage/status-tests",
  "coverageReporters": [
    "text",
    "text-summary",
    "lcov",
    "html",
    "json"
  ],
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleFileExtensions": ["ts", "js", "json"],
  "collectCoverage": true,
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "testTimeout": 30000,
  "maxWorkers": "50%",
  "globals": {
    "ts-jest": {
      "tsconfig": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
      }
    }
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@shared/(.*)$": "<rootDir>/../shared/$1"
  }
}
